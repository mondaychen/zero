  height: 80px

#nav-search
  border: none
  margin-top: 25px
  .addtional-options
    position: absolute
    padding: 10px
    width: 299px
    background: white
    border: 1px solid #ccc
    border-top: none
    border-bottom-left-radius: 5px
    border-bottom-right-radius: 5px
