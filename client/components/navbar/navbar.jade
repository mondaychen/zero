            ng-submit="search.submit()")
            .form-group
              .input-group
                span.input-group-btn
                  button.btn.btn-default(type="button"
                    ng-click="search.showOptions = !search.showOptions")
                    span.glyphicon.glyphicon-cog
                input.form-control(id="search-input" name="search" type="text"
                  placeholder="{{ 'Search by ' \
                  + searchOptions.type[search.type] + ' for '\
                  + searchOptions.institute[search.institute] }}"
                  ng-focus="search.showOptions = true"
                  ng-model="search.value")
                span.input-group-btn
                  button.btn.btn-default(type="submit") Go
            .addtional-options(ng-show="search.showOptions")
              button.close(type="button"
                ng-click="search.showOptions = false") &times;
              h6.text-muted Institute
              label.radio-inline
                input(type="radio" ng-model="search.institute"
                  name="institute" value="0")
                span Cornell
              label.radio-inline
                input(type="radio" ng-model="search.institute"
                  name="institute" value="1")
                span Columbia
              h6.text-muted MRN / Accession #
              label.radio-inline
                input(type="radio" ng-model="search.type"
                  name="type" value="0")
                span MRN
              label.radio-inline
                input(type="radio" ng-model="search.type"
                  name="type" value="1")
                span Accession #
        li.hidden-xs
          a(data-toggle="modal" data-target="#help-box") Help
        li.visible-xs-block
          .btn-group.btn-group-justified
            .btn-group
              button.btn.btn-default.btn-pager(data-toggle="modal"
                data-target="#pager-box") Send page
            .btn-group
