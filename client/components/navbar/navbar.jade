      ul.nav.navbar-nav.navbar-right.row
        li.dropdown.send-massages.hidden-xs
          a.dropdown-toggle(data-toggle="dropdown"
            role="button" aria-expanded="false")
            | Send Messages
            span.caret
          ul.dropdown-menu(role="menu")
