div(ng-include='"components/navbar/navbar.html"')

mixin infoItem(category)
  //- .item(class= (isRecommended ? "recommended" : "") ng-repeat="item in person.#{category}")
  .item(ng-repeat="item in person.#{category}"
    ng-class="item.isRecommended ? 'recommended' : ''")
    .actions
      .votes
        button.up-vote(ng-click='vote(item, 1)')
          span.glyphicon.glyphicon-ok(aria-label="Upvote"
            ng-class='item.voteStatus==1 ? "active" : ""')
        button.down-vote(ng-click='vote(item, -1)')
          span.glyphicon.glyphicon-remove(aria-label="Downvote"
            ng-class='item.voteStatus==-1 ? "active" : ""')
      //- .count(class= (isHighlight ? "highlight" : ""))= count
      .count(ng-class='item.isHighlight ? "highlight" : ""') {{item.score}}
    .flag(ng-show="item.isNew")
      | New!
    .detail {{item.value}}
  .empty-list(ng-show="!person.#{category}.length") No Data

mixin infoSection(category)
  .col-md-6.col-xs-12(class="zero-section-view-#{category}")
    section(ng-class="['scheme-' + scheme.#{category}, \
      viewStatus.targetSubView == '#{category}' ? 'focused' : '']")
      h4.title
        | {{dispalyNames.#{category}}}
        button.more(ng-click="viewStatus.changeToSubView('#{category}')") +
      +infoItem(category)
      .notes
        a.toggle(href="#") Show notes(1)

.container
  .row
    .col-lg-8.col-md-12
      .doctor-info
        h2.name
          | {{person.fullName}}
        .description
          | [description]
      #main-info(ng-class="viewStatus.viewClass")
        .contact-info.lined.row
          +infoSection("officePhone")
          +infoSection("mobilePhone")
        .contact-info.lined.row
          +infoSection("pagerNum")
          +infoSection("email")
        .contact-info.row
          +infoSection("faxNum")
          .col-md-6.col-xs-12
            section.info-address.scheme-gray
              h4.title
                | Address
              .item
                span.detail(ng-bind-html="person.addresses[0]")
              button.btn.btn-default Show all
      #sub-info
        .contact-info.row
          .col-md-2
            button.back(ng-class="'scheme-' + scheme[viewStatus.targetSubView]")
              span.glyphicon.glyphicon-chevron-left(aria-label="Back")
              br
              | Back
          .col-md-10
            section(ng-class="'scheme-' + scheme[viewStatus.targetSubView]")
              h4.title
                | {{dispalyNames[viewStatus.targetSubView]}}
      pre(ng-bind-html="content['hybridized_provider_output'] | json")
    .col-lg-3.col-lg-offset-1.col-md-12
      .list-group
        a.list-group-item.active(href="#")
          .name John Smith, MD
          .ordered
            b Ordered this study
          .role doctor's role
